<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class="well">
        <p>
            <strong><%= comment.username %></strong>: <%= comment.body %><br>
            <%= link_to 'Delete Comment', [comment.post, comment], method: :delete, data: {confirm: 'Are you sure?'} %>
        </p>
    </div>
<% end %>
